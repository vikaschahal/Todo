<div class="well">
  <p><strong>Todo List</strong></p>
  <%= form_tag("/todos/destroy/", :method => "post") do %>
     <ul style="list-style-type:none;">
      <% @todo_item.each do |t| %>
         <% if t.completed == true %>
           <li style="color:red;"> <%= check_box_tag  "todos_checkbox[]",t.id %>  <strike><%= t.todo_item %></strike>(completed) </li>
         <% else %>
           <li> <%= check_box_tag  "todos_checkbox[]",t.id %> <%= t.todo_item %>  </li>
         <% end %>
      <%end%>
    </ul>
    <%= submit_tag("Delete Todos", :class=>"btn btn-success") %>
  <%end %>
</div>
<a href="/todos/index">Back</a>
