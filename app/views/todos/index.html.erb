<title> Todo App </title>
<div class="container">
  <div class="row">
    <div class="span4">
      <h1> Todo App</h1>
      <hr>

      <div class="btn btn-info btn-sm  " >
     <%= link_to "ADD NEW TODO", todos_new_path %></br>
     </div>
  <div class='well'>
    <table class="table table-hover">
    <thead>
      <tr>

        <th>Travel List</th>
        <th>Privacy</th>
        <th>Event Date</th>
        <th>Status</th>
        <th>Privacy</th>
        <th>Delete</th>
      </tr>
    </thead>
    <tbody>
       <% @todo_items.each do |t| %>
      <tr>

        <td><%= t.todo_item %></td>
        <td><%if (t.private== false)%> Public
              <%else%> Private
             <%end%>
        </td>
        <td><%= t.event_date %> </td>
        <td> <%if(t.completed==false)%>Uncomplete<%else%>Completed<%end%><div class="btn  btn-sm  " style color="red" >(<%= link_to "Change", todos_complete_path(:param1 => t.id), method: :post,
                                                                                                                                data: { confirm: "You sure?" } %></div>)
        </td>
        <td> <%if(t.private==false)%>Public<%else%>Private<%end%><div class="btn  btn-sm  " style color="red" >(<%= link_to "Change", todos_privateToDo_path(:param1 => t.id), method: :post,
                                                                                                                                                                           data: { confirm: "You sure?" } %></div>)
        </td>
        <td> <div  class="btn btn-info btn-sm  "  ><%= link_to "delete", todos_destroy_path(:param1 => t.id), method: :delete,
                                                                                          data: { confirm: "You sure?" } %></div></td>

      </tr><% end %>
        </tbody>
  </table>


