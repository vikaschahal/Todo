<title> Todo App </title>
<div class="container">
  <div class="row">
    <div class="span4">
      <h1> Todo App</h1>
      <hr>

     <div class="well">
         <div class="btn btn-info btn-sm btn-block " >
        <%= link_to "ADD NEW TODO", todos_new_path %></br>
      </div>
      <div class="btn btn-info btn-sm btn-block">
          <%= link_to "DELETE TODOS", todos_delete_path %>
       </div>
    </div>
  <div class='well'>
      <p><strong>Public Todos</strong></p>
    <ul>

         <% @todo_items.each do |t| %>
           <% if (t.private== false) %>
             <li><%= t.todo_item %> <ul><li><%= t.event_date %></li></ul></li>
          <%end%>
       <%end%>
    </ul>
    <p><strong>Private Todos</strong></p>
    <ul>
      <% @todo_items.each do |t| %>
         <% if (t.private==true) %>
           <li><%= t.todo_item %> <ul><li><%= t.event_date %></li></ul></li>
        <%end%>
     <%end%>
   </ul>
  </div>

  <div class="well">
    <p><strong>Todo List</strong></p>
    <%= form_tag("/todos/complete/", :method => "post") do %>
       <ul style="list-style-type:none;">
        <% @todo_items.each do |t| %>
           <% if t.completed == true %>
             <li style="color:red;"> <%= check_box_tag  "todos_checkbox[]",t.id %>  <strike><%= t.todo_item %></strike>(completed) </li>
           <% else %>
             <li> <%= check_box_tag  "todos_checkbox[]",t.id %> <%= t.todo_item %>  </li>
           <% end %>
        <%end%>
      </ul>
      <%= submit_tag("Complete Todos", :class=>"btn btn-success") %>
    <%end %>
  </div> <!-- well -->
  <div class="well">
    <p><strong> Todo List</strong> </p>
    <%= form_tag("/todos/privateToDo/", :method => "post") do %>
      <ul style="list-style-type:none;">
        <% @todo_items.each do |t| %>
          <% if t.private == true %>
            <li style="color:blue;"> <%= check_box_tag  "todos_checkbox[]",t.id %>  <%= t.todo_item %>(Private) </li>
          <% else %>
            <li> <%= check_box_tag  "todos_checkbox[]",t.id %> <%= t.todo_item %>  </li>
          <% end %>
        <%end%>
      </ul>
        <%= submit_tag("Make Private Todos", :class=>"btn btn-success") %>
      <%end %>
    </div> <!-- span4 -->
  </div> <!-- row -->
</div> <!-- container -->
