<title> Todo App </title>
<div class="container">
  <div class="row">
    <div class="span4">
      <h1> Todo App</h1>
      <hr>

     <div class="well">
         <div class="btn btn-info btn-sm btn-block " >
        <%= link_to "ADD NEW TODO", todos_new_path %></br>
      </div>

    </div>
  <div class='well'>
      <p><strong>Public Todos</strong></p>
    <ul>

         <% @todo_items.each do |t| %>
           <% if (t.private== false) %>

             <li><%= t.todo_item %>
               <ul>
                 <li><%= t.event_date %><%= link_to "delete", todos_destroy_path(:param1 => t.id), method: :delete,
                                                                                                   data: { confirm: "You sure?" } %>
                 </li>
               </ul>
             </li>
          <%end%>
       <%end%>
    </ul>
    <p><strong>Private Todos</strong></p>
    <ul>
      <% @todo_items.each do |t| %>
         <% if (t.private==true) %>
           <li>
             <%= t.todo_item %>
             <ul>
               <li>
                 <%= t.event_date %><%= link_to "delete", todos_destroy_path(:param1 => t.id), method: :delete,
                                                                                               data: { confirm: "You sure?" } %>
               </li>
             </ul>
           </li>
        <%end%>
     <%end%>
   </ul>
  </div>

  <div class="well">
    <p><strong> Todo List</strong> </p>
    <%= form_tag("/todos/privateToDo/", :method => "post") do %>
      <ul style="list-style-type:none;">
        <% @todo_items.each do |t| %>
          <% if t.private == true %>
            <li style="color:blue;"> <%= check_box_tag  "todos_checkbox[]",t.id %>  <%= t.todo_item %>(Private)
              <ul><li>Created <%= time_ago_in_words(t.created_at) %> ago.</li></ul>
             </li>
          <% else %>
            <li> <%= check_box_tag  "todos_checkbox[]",t.id %> <%= t.todo_item %>
             <ul><li>Created <%= time_ago_in_words(t.created_at) %> ago.</li></ul>
             </li>
          <% end %>
        <%end%>
      </ul>
        <%= submit_tag("Make Private Todos", :class=>"btn btn-success") %>
      <%end %>
    </div> <!-- span4 -->
  </div> <!-- row -->
</div> <!-- container -->
