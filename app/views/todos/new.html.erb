        <strong><%= flash[:error] %></strong>
        </div>
       <% end %>
       -->
   <!-- <% if flash[:success] %>
      <div class="alert alert-success">
       <%= flash[:success] %>
      </div>
      <% end %> -->

    </div> <!-- span4 -->
  </div> <!-- row -->
</div> <!-- container -->
